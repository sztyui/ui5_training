<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core">
   <Dialog
      id="myDialog"
      title="Hello E.ON!">
      
      <FlexBox height="100px"
			   alignItems="Center"
			   justifyContent="Center">
        <Image src="https://www.eon.hu/etc.clientlibs/eon-hungary/clientlibs/clientlib-resources/resources/img/logo-red.svg" 
             class="sapUiTinyMarginBeginEnd" />
      </FlexBox>
      <beginButton>
         <Button
            id="closeDialogBtn"
            text="Close"
            press="closeDialog"/>
      </beginButton>
   </Dialog>
</core:FragmentDefinition>