<mvc:View controllerName="demo.controller.MyPanel"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
        <Panel headerText="{i18n>panelName}" 
               width="auto" 
               accessibleRole="Region" 
               class="sapUiResponsiveMargin">
            <Button text="{i18n>buttonText}"
                    press="onPress" 
                    class="sapUiMediumMarginBeginEnd">
            </Button>
            <Button text="{i18n>button2Text}"
                    press="openDialog" 
                    class="sapUiTinyMarginBeginEnd">
            </Button>
            <Button text="{i18n>button3Text}"
                    press="openDialog2" 
                    class="sapUiTinyMarginBeginEnd">
            </Button>
	    </Panel>
</mvc:View>